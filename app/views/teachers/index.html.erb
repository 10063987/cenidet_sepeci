<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rfc</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Grade</th>
      <th>Research line</th>
      <th>Origin</th>
      <th>Teacher type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.rfc %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.grade %></td>
        <td><%= teacher.research_line %></td>
        <td><%= teacher.origin %></td>
        <td><%= teacher.teacher_type %></td>
        <td><%= teacher.user %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

