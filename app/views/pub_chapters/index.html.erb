<p id="notice"><%= notice %></p>

<h1>Pub Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Chapter title</th>
      <th>Publisher</th>
      <th>Edition number</th>
      <th>Chapter number</th>
      <th>Start page</th>
      <th>End page</th>
      <th>Evidence</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pub_chapters.each do |pub_chapter| %>
      <tr>
        <td><%= pub_chapter.isbn %></td>
        <td><%= pub_chapter.chapter_title %></td>
        <td><%= pub_chapter.publisher %></td>
        <td><%= pub_chapter.edition_number %></td>
        <td><%= pub_chapter.chapter_number %></td>
        <td><%= pub_chapter.start_page %></td>
        <td><%= pub_chapter.end_page %></td>
        <td><%= pub_chapter.evidence %></td>
        <td><%= pub_chapter.message %></td>
        <td><%= link_to 'Show', pub_chapter %></td>
        <td><%= link_to 'Edit', edit_pub_chapter_path(pub_chapter) %></td>
        <td><%= link_to 'Destroy', pub_chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

